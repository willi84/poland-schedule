  .cluster { display:flex; gap:1rem; flex-wrap:wrap; align-items:flex-end; }
  label { display:flex; flex-direction:column; gap:.25rem; font-size:.9rem; }
  input[type="search"], select { padding:.5rem .6rem; min-width:18rem; }
  ul#list { list-style:none; padding:0; margin:0; }
  .card { padding:1rem; border:1px solid #e3e3e7; border-radius:12px; background:#fff; }
