---
layout: base.template.njk
title: Welcome to the talks of NG Poland,JS Poland and AI Poland
navigation: false
footer: true
---
{%- from "./../templates/_setup/macros/component.macro.njk" import component -%}


{# Daten aus _data/sessions.json #}
{% set conferences = sessions.conferences or {} %}
{% set speakers    = sessions.speakers or {} %}
{% set sessionMap  = sessions.sessions or {} %}
{% set sessionPairs = sessionMap | dictsort %} {# [ [id, obj], ... ] #}

<section class="mt-4">
{{ component("search", {
    placeholder: "search session ...",
    uid: "talks",
    category: "talks",
    no_result: ["no session found", "try with another search term."]
  }) }}

<section class="stack">

  <ul id="list" class="stack"  data-search="talks">
    {% for pair in sessionPairs %}
      {% set s = pair[1] %}
      {% set sp = speakers[s.speakerID] %}
      {% set speakerName = sp and sp.name or s.speakerID %}
        {% set role = sp and sp.role or '' %}
      {% set company = sp and sp.company or '' %}
    {% set day = s.day %}
      {% set start = s.startTime %}
      {% set end = s.endTime %}
      {% set country = sp and sp.country or '' %}
      {% set flag = sp.flag %}
      {% set indexText = (s.title ~ ' ' ~ speakerName ~ ' ' ~ (sp.role or '') ~ ' ' ~ company ~ ' ' ~ country) %}
      <li
      class="carxxd  searXXchable"
        data-talk="{{ s.id }}"
        data-conf="{{ (s.conference or '') | lower }}"
        data-index="{{ indexText | lower }}"
        data-searchable="{{s.title}} {{s.description}}  {{speakerName}} {{role}} {{company}} {{country}}"

      >

      <div class="card mb-3 text-white talk-card" stylXXe="max-width: 540px;" style="background-color: {{conferences[s.conference].color}};">
  <div class="row g-0">
    <div class="col-md-2">
      {{
            component("profile", {
                item: {
                    name: speakerName,
                    plattform: "Speaker Profile",
                    url: sp and sp.href or "#",
                    class_modifier: "speaker-img",
                    image: sp and sp.image or "",
                    width: 200,
                    height: 200
                }
            })
        }}
          {{
            component("button_link", {
                "type": "button",
                "text": s.conference,
                "image_url": conferences[s.conference].logo | safe,
                "image_width": 20,
                "image_height": 20,
                "url": s.href,
                "background_color": conferences[s.conference].colorSecondary,
                "disabled": disabled
            })
        }}
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">
           <a class="skill-value text-white" href="{{ s.href }}" rel="noopener noreferrer" target="_blank">ğŸ™ï¸ {{ s.title }}</a>
           <a class="skill-search hidden text-white" href="{{ s.href }}" rel="noopener noreferrer" target="_blank">ğŸ™ï¸ {{ s.title }}</a>
        </h5>
        <h6>
            <span class="chip" style="background: {{ conferences[s.conference].colorSecondary }}; border-radius: 5px;">
                <span>
                    <span class="skill-value">â­ {{speakerName}}</span>
                    <span class="skill-search hidden">â­ {{speakerName}}</span>
                </span>
                {% if day %}
                <br /><span>
                    <span class="skill-value">ğŸ“… {{ day }}</span>
                    <span class="skill-search hidden">ğŸ“… {{day }}</span>
                </span>
                {% if start and end %}
                <span>
                    <span class="skill-value">ğŸ•’ {{ start }} - {{ end }}</span>
                    <span class="skill-search hidden">ğŸ•’ {{ start }} - {{ end }}</span>
                </span>
                {% endif %}
                {% endif %}
                {% if role %} 
                <br /><span>
                    <span class="skill-value">ğŸ’¼ {{ role }}</span>
                    <span class="skill-search hidden">ğŸ’¼ {{ role }}</span>
                </span>
                {% endif %}
                {% if company %}
                <span>
                    <span class="skill-value">@ {{ company }}</span>
                    <span class="skill-search hidden">@ {{ company }}</span>
                </span>
                {% endif %}
                {% if country %}
                <span>
                    {# {{ component('image', {
                        src: flag,
                        alt: country,
                        width: 20,
                        height: 15,
                        class_modifier: 'flag-icon'
                    })}} #}
                     {# {{flag}} #}
                    <span class="skill-value">({{ country }})</span>
                    <span class="skill-search hidden">({{ country }})</span>
                </span>
                {% endif %}
            </span>
        </h6>
        {% if s.description %}
            <p class="card-text">
                <span class="skill-value">{{ s.description }}</span>
                <span class="skill-search hidden">{{ s.description }}</span>
            </p>
        {% endif %}

        {# <p class="card-text tags text-white"><small class="text-muted">
          {% if sp and sp.socials and sp.socials.linkedin %}
            Â· <a href="{{ sp.socials.linkedin }}">LinkedIn</a>
          {% endif %}
          {% if sp and sp.socials and sp.socials.twitter %}
            Â· <a href="{{ sp.socials.twitter }}">Twitter</a>
          {% endif %}
          {% if sp and sp.socials and sp.socials['x.com'] %}
